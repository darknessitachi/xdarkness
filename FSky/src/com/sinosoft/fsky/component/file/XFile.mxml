<?xml version="1.0" encoding="utf-8"?>
<s:Group xmlns:fx="http://ns.adobe.com/mxml/2009" 
		 xmlns:s="library://ns.adobe.com/flex/spark" 
		 xmlns:mx="library://ns.adobe.com/flex/mx" width="100%" height="100%">
	<fx:Declarations>
		<s:State name="nomal" />
		<s:State name="uploading" />
		<s:State name="upload" />
	</fx:Declarations>
	
	<fx:Script>
		<![CDATA[
			import mx.controls.Alert;
			
			/**
			 * 业务主键
			 */
			public var xid:String = "";
			
			//文件上传类  
			private var fileRefer:FileReference=new FileReference();  
			
			// createChildren 比 creationComplete 事件更早发生, 省的注册事件侦听, 直接在这里写了
			protected override function createChildren():void {
				super.createChildren();
				
				//添加事件  
				//用户选中文件后执行的事件  
				fileRefer.addEventListener(Event.SELECT,selectHandler);  
				//上传完成之后执行的事件  
				fileRefer.addEventListener(Event.COMPLETE,processResult);  
				fileRefer.addEventListener(ProgressEvent.PROGRESS, progress);  
			}
			
			private function selectHandler(event:Event):void{  
				
				currentState = "uploading";
				
				//提交三个参数Filename,Filedata,Upload       
				var r:URLRequest=new URLRequest(xid + ".xfile");  
				fileRefer.upload(r);//第二个参数指定文件域的名字，默认为Filedata
			}  
			
			private function processResult(event:Event):void{  
				currentState = "upload";
				this.lblName.text = fileRefer.name;
				this.lblSize.text = Math.floor(fileRefer.size / 1024) + "kb";
			}  
			
			private function progress(event:ProgressEvent):void{  
				progressBar.setProgress(event.bytesLoaded, event.bytesTotal);  
				progressBar.label = "上传进度:" + int(event.bytesLoaded / event.bytesTotal * 100) + "%";  
			} 
			
			private function browse():void{  
				
				var filter:FileFilter = new FileFilter("Excel 2003 文件", "*.xls");  
				//打开选择文件对话框  
				fileRefer.browse([filter]);  
			}
			
			private function cancel():void {
				fileRefer.cancel();
			}
		]]>
	</fx:Script>
	
	<s:Button icon="assets/icons/upload.png" label="上报" click="browse();" visible.nomal="true" visible.uploading="false" visible.upload="false"/>
	
	<s:HGroup>
		<s:Label id="lblName" visible.nomal="false" visible.uploading="true" visible.upload="true"/>
		<s:Label id="lblSize" visible.nomal="false" visible.uploading="true" visible.upload="true"/>
		
		<mx:ProgressBar id="progressBar" labelPlacement="bottom" label="上传进度：0%"
						minimum="0" visible="true" maximum="100" 
						direction="right" mode="manual" width="100" visible.nomal="false" visible.uploading="true" visible.upload="false"/>
		<s:Button label="取消" click="cancel()" visible.nomal="false" visible.uploading="true" visible.upload="false"/>
	</s:HGroup>
</s:Group>
