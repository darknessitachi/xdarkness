	<!-- 配置框架的会话监听器与定时监听器 -->
	<listener>
		<listener-class>com.xdarkness.framework.SessionListener</listener-class>
	</listener>
	<listener>
		<listener-class>com.xdarkness.framework.MainContextListener</listener-class>
	</listener>
	
	<!-- 配置框架的主Servlet -->
	<servlet>
		<servlet-name>MainServlet</servlet-name>
		<servlet-class>com.xdarkness.framework.jaf.MainServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>MainServlet</servlet-name>
		<url-pattern>/MainServlet.jsp</url-pattern>
	</servlet-mapping>
	
	<!-- 配置验证码Servlet -->
	<servlet>
		<servlet-name>AuthCodeServlet</servlet-name>
		<servlet-class>com.xdarkness.framework.servlets.AuthCodeServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>AuthCodeServlet</servlet-name>
		<url-pattern>/AuthCode.jsp</url-pattern>
	</servlet-mapping>
	
