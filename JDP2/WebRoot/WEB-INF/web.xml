<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/j2ee" xmlns:javaee="http://java.sun.com/xml/ns/javaee" xmlns:jsp="http://java.sun.com/xml/ns/javaee/jsp" xmlns:web="http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd" xsi:schemaLocation="http://java.sun.com/xml/ns/j2ee http://java.sun.com/xml/ns/j2ee/web-app_2_4.xsd" id="WebApp_ID" version="2.4">
  <javaee:display-name>SkyPlatform</javaee:display-name>
  <error-page>
    <error-code>404</error-code>
    <location>/Services/404.jsp</location>
  </error-page>
  <welcome-file-list>
    <welcome-file>index.htm</welcome-file>
    <welcome-file>index.shtml</welcome-file>
    <welcome-file>Login.jsp</welcome-file>
    <welcome-file>Index.jsp</welcome-file>
  </welcome-file-list>
  <jsp-config>
    <taglib>
      <taglib-uri>controls</taglib-uri>
      <taglib-location>/WEB-INF/controls.tld</taglib-location>
    </taglib>
    <jsp-property-group>
      <javaee:description>jsp encoding example</javaee:description>
      <javaee:display-name>JSPConfiguration</javaee:display-name>
      <url-pattern>*.jsp</url-pattern>
      <el-ignored>true</el-ignored>
      <page-encoding>UTF-8</page-encoding>
      <scripting-invalid>false</scripting-invalid>
    </jsp-property-group>
    <jsp-property-group>
      <javaee:description>html encoding example</javaee:description>
      <javaee:display-name>JSPConfiguration</javaee:display-name>
      <url-pattern>*.html</url-pattern>
      <el-ignored>true</el-ignored>
      <page-encoding>UTF-8</page-encoding>
      <scripting-invalid>false</scripting-invalid>
    </jsp-property-group>
  </jsp-config>
  <filter>
    <filter-name>MainFilter</filter-name>
    <filter-class>com.xdarkness.framework.MainFilter</filter-class>
  </filter>
  <filter-mapping>
    <filter-name>MainFilter</filter-name>
    <url-pattern>*.jsp</url-pattern>
  </filter-mapping>
  <filter>
    <filter-name>SSIFilter</filter-name>
    <filter-class>com.xdarkness.framework.ssi.SSIFilter</filter-class>
  </filter>
  <filter-mapping>
    <filter-name>SSIFilter</filter-name>
    <url-pattern>*.shtml</url-pattern>
  </filter-mapping>
  <listener>
    <javaee:listener-class>com.xdarkness.framework.SessionListener</javaee:listener-class>
  </listener>
  <listener>
    <javaee:listener-class>com.xdarkness.framework.MainContextListener</javaee:listener-class>
  </listener>
  <servlet>
    <servlet-name>MainServlet</servlet-name>
    <servlet-class>com.xdarkness.framework.jaf.MainServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>MainServlet</servlet-name>
    <url-pattern>/MainServlet.jsp</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>AuthCodeServlet</servlet-name>
    <servlet-class>com.xdarkness.framework.servlets.AuthCodeServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>AuthCodeServlet</servlet-name>
    <url-pattern>/AuthCode.jsp</url-pattern>
  </servlet-mapping>
  <mime-mapping>
    <extension>xls</extension>
    <mime-type>application/octet-stream</mime-type>
  </mime-mapping>
  <mime-mapping>
    <extension>rar</extension>
    <mime-type>application/rar</mime-type>
  </mime-mapping>
</web-app>